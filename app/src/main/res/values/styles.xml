<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:windowBackground">@color/light_grey</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
        <item name="tint">@color/green</item>
    </style>

    <style name="StandardItem" >
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="CustomTextSize" >
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SpinnerSize" >
        <item name="android:textSize">24sp</item>
    </style>
</resources>